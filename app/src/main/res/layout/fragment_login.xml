<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".LoginFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Log in"
        android:textSize="25sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/edit_login_uName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="100dp"
        android:minHeight="48dp"
        android:text="Username/E-mail" />

    <EditText
        android:id="@+id/edit_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="200dp"
        android:minHeight="48dp"
        android:text="Password" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="250dp"
        android:layout_marginHorizontal="155dp"
        android:text="Log In" />

    <TextView
        android:id="@+id/text_signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="300dp"
        android:layout_marginHorizontal="180dp"
        android:text="Sign up"
        android:textColor="@color/purple_500"/>

    <TextView
        android:id="@+id/infoTextLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="175dp"
        android:layout_marginVertical="40dp"
        android:text="" />

</FrameLayout>